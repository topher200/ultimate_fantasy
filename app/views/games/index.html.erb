<h1>Listing games</h1>

<table>
  <tr>
    <th>Home team</th>
    <th>Away team</th>
    <th>Home score</th>
    <th>Away score</th>
    <th>Date</th>
    <th>Week</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @games.each do |game| %>
  <tr>
    <td><%= game.home_team_id %></td>
    <td><%= game.away_team_id %></td>
    <td><%= game.home_score %></td>
    <td><%= game.away_score %></td>
    <td><%= game.date %></td>
    <td><%= game.week %></td>
    <td><%= link_to 'Show', game %></td>
    <td><%= link_to 'Edit', edit_game_path(game) %></td>
    <td><%= link_to 'Destroy', game, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

