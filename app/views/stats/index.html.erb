<h1>Listing stats</h1>

<table>
  <tr>
    <th>Player</th>
    <th>Game</th>
    <th>Goals</th>
    <th>Assists</th>
    <th>Ds</th>
    <th>Turns</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @stats.each do |stat| %>
  <tr>
    <td><%= stat.player %></td>
    <td><%= stat.game %></td>
    <td><%= stat.goals %></td>
    <td><%= stat.assists %></td>
    <td><%= stat.ds %></td>
    <td><%= stat.turns %></td>
    <td><%= link_to 'Show', stat %></td>
    <td><%= link_to 'Edit', edit_stat_path(stat) %></td>
    <td><%= link_to 'Destroy', stat, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

