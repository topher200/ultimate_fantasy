<table>
  <tr>
    <th>Name</th>
    <th>Ultimate team</th>
    <th>Number</th>
    <th>School</th>
    <th>Club team</th>
    <th>Height</th>
    <th>Weight</th>
    <th>Draft to Team</th>
  </tr>
<% @players.each do |player| %>
  <tr>
    <td><%= player.name %></td>
    <td><%= player.ultimate_team.name %></td>
    <td><%= player.number %></td>
    <td><%= player.school %></td>
    <td><%= player.club_team %></td>
    <td><%= player.height %></td>
    <td><%= player.weight %></td>
    <td>
      <%= form_tag(:action => "draft", :method=>'post',
        :player => player) do -%>
        <%= select_tag(:new_owner, options_for_select(@owner_array)) %>
        <%= submit_tag 'Draft' %>
      <% end %>
    </td>
  </tr>
<% end %>
</table>
